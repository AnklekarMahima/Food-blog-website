<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Food Blog - Home</title>
</head>
<body>
    <header>
        <h1>Welcome to Foodie's Haven</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/create">Create New Post</a>
        </nav>
    </header>

    <main>
        <div class="posts">
            <% posts.forEach(post => { %>
                <a href="/posts/<%= post.id %>" class="post-card-link">
                    <div class="post-card">
                     <img src="<%= post.image %>" alt="<%= post.title %> Image">
                        <div class="post-content">
                            <h2><%= post.title %></h2>
                            <p><%= post.description %></p>
                            
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Foodie's Haven | All rights reserved.</p>
    </footer>
</body>
</html>



